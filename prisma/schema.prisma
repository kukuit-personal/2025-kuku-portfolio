datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model WorkSession {
  id              String   @id @default(cuid())
  date            String   // YYYY-MM-DD (Asia/Ho_Chi_Minh)
  startAt         DateTime
  endAt           DateTime?
  durationSeconds Int?
  device          String?
  notes           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([date])
}
