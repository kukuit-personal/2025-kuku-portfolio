datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum WorkSessionStatus {
  active
  disabled
}

model WorkSession {
  id              String             @id @default(cuid())
  date            String
  startAt         DateTime
  endAt           DateTime?
  durationSeconds Int?
  device          String?
  notes           String?
  status          WorkSessionStatus  @default(active)  // <-- enum
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt

  @@index([date])
  @@index([status])
}
